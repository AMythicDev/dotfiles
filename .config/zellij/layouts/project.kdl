layout {
  tab name="nvim" {
    pane {
      borderless true
      command "nvim"
    }
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
  }

  tab name="terminal" {
    pane
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
  }

  tab name="lazygit" {
    pane {
      borderless true
      command "lazygit"
    }
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
  }
}

